<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:layout_weight="1"
        android:fontFamily="@font/arial_rounded_mt_bold"
        android:foregroundGravity="center"
        android:gravity="center"
        android:minHeight="65dp"
        android:text="About"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#00FFCE"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toStartOf="@+id/tipView"
        app:layout_constraintStart_toEndOf="@+id/tipView"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:strokeColor="#000000"
        app:strokeWidth="2dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="270dp"
        android:layout_height="130dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/newGameButton"
            android:layout_width="270dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:fontFamily="@font/arial_rounded_mt_bold"
            android:minHeight="65dp"
            android:text="New Game"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#00FFCE"
            app:cornerRadius="20dp"
            app:strokeColor="#000000"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/continueButton"
            android:layout_width="270dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:fontFamily="@font/arial_rounded_mt_bold"
            android:minHeight="65dp"
            android:text="Continue Game"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#00FFCE"
            app:cornerRadius="20dp"
            app:strokeColor="#000000"
            app:strokeWidth="2dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="120dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/historyButton"
            android:layout_width="270dp"
            android:layout_height="65dp"
            android:fontFamily="@font/arial_rounded_mt_bold"
            android:minHeight="65dp"
            android:text="Score History"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#00FFCE"
            app:cornerRadius="20dp"
            app:strokeColor="#000000"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/achievementsButton"
            android:layout_width="270dp"
            android:layout_height="65dp"
            android:fontFamily="@font/arial_rounded_mt_bold"
            android:minHeight="65dp"
            android:text="Achievements"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#00FFCE"
            app:cornerRadius="20dp"
            app:strokeColor="#000000"
            app:strokeWidth="2dp" />

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/rateAppButton"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/arial_rounded_mt_bold"
                android:minHeight="65dp"
                android:text="Rate App"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:backgroundTint="#00FFCE"
                app:cornerRadius="20dp"
                app:strokeColor="#000000"
                app:strokeWidth="2dp" />

            <View
                android:id="@+id/divider"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/shareAppButton"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/arial_rounded_mt_bold"
                android:minHeight="65dp"
                android:text="Share"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:backgroundTint="#00FFCE"
                app:cornerRadius="20dp"
                app:strokeColor="#000000"
                app:strokeWidth="2dp" />

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/tipButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:background="#0000"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/tip_jar" />

    <FrameLayout
        android:id="@+id/aboutView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BF464646"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/aboutSelectionView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/confirmation_view_border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/aboutTitleTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/arial_rounded_mt_bold"
                    android:paddingTop="10dp"
                    android:text="About"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/chalkboard_se_bold_"
                        android:paddingLeft="10dp"
                        android:text="App Version: "
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/appVersionTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/chalkboard_se_light_"
                        android:text="1.0.0"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/chalkboard_se_bold_"
                        android:paddingLeft="10dp"
                        android:text="Privacy Policy: "
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/privacyPolicyLinkTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/chalkboard_se_light_"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <Button
                    android:id="@+id/exitAboutScreenButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/arial_rounded_mt_bold"
                    android:minWidth="75dp"
                    android:text="Exit"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    app:backgroundTint="#00FFCE"
                    app:cornerRadius="20dp"
                    app:strokeColor="#000000"
                    app:strokeWidth="2dp" />
            </LinearLayout>

        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/tipView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BF464646"
        app:layout_constraintBottom_toBottomOf="@+id/newGameConfirmationView"
        app:layout_constraintEnd_toEndOf="@+id/newGameConfirmationView"
        app:layout_constraintStart_toStartOf="@+id/newGameConfirmationView"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/exitTipButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:width="60dp"
            android:height="60dp"
            android:fontFamily="@font/arial_rounded_mt_bold"
            android:maxWidth="60dp"
            android:minWidth="60dp"
            android:minHeight="60dp"
            android:text="X"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="20sp"
            app:backgroundTint="#00FFCE"
            app:cornerRadius="30dp"
            app:strokeColor="#000000"
            app:strokeWidth="2dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="20dp"
            android:minHeight="200dp"
            app:layout_constraintStart_toStartOf="@+id/newGameConfirmationView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tipJarLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp"
                    android:height="30dp"
                    android:background="@drawable/tip_label_border"
                    android:fontFamily="@font/arial_rounded_mt_bold"
                    android:gravity="center"
                    android:text="Virtual Tip Jar"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tipAppreciationLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/appreciation_label_border"
                    android:fontFamily="@font/chalkboard_se_bold_"
                    android:gravity="center"
                    android:text="With any tip, all ads will be removed!\nWe appreciate and thank you for your support!" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/tipcell_label_border">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="5"
                            android:fontFamily="@font/chalkboard_se_light_"
                            android:text="Birdie!"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <View
                            android:id="@+id/divider3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent" />

                        <Button
                            android:id="@+id/button7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:fontFamily="@font/chalkboard_se_bold_"
                            android:text="$0.99"
                            android:textColor="#000000"
                            app:backgroundTint="#00FFCE"
                            app:cornerRadius="20dp"
                            app:strokeColor="#000000"
                            app:strokeWidth="2dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/tipcell_label_border">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="5"
                            android:fontFamily="@font/chalkboard_se_light_"
                            android:text="Eagle!"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <View
                            android:id="@+id/divider4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent" />

                        <Button
                            android:id="@+id/button9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:fontFamily="@font/chalkboard_se_bold_"
                            android:text="$1.99"
                            android:textColor="#000000"
                            app:backgroundTint="#00FFCE"
                            app:cornerRadius="20dp"
                            app:strokeColor="#000000"
                            app:strokeWidth="2dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/tipcell_label_border">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="5"
                            android:fontFamily="@font/chalkboard_se_light_"
                            android:text="Albatross!"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <View
                            android:id="@+id/divider5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent" />

                        <Button
                            android:id="@+id/button10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:fontFamily="@font/chalkboard_se_bold_"
                            android:text="$2.99"
                            android:textColor="#000000"
                            app:backgroundTint="#00FFCE"
                            app:cornerRadius="20dp"
                            app:strokeColor="#000000"
                            app:strokeWidth="2dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/tipcell_label_border">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="5"
                            android:fontFamily="@font/chalkboard_se_light_"
                            android:text="Condor!"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <View
                            android:id="@+id/divider6"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent" />

                        <Button
                            android:id="@+id/button11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:fontFamily="@font/chalkboard_se_bold_"
                            android:text="$3.99"
                            android:textColor="#000000"
                            app:backgroundTint="#00FFCE"
                            app:cornerRadius="20dp"
                            app:strokeColor="#000000"
                            app:strokeWidth="2dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/tipcell_label_border">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="5"
                            android:fontFamily="@font/chalkboard_se_light_"
                            android:text="Ostrich!"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <View
                            android:id="@+id/divider7"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/transparent" />

                        <Button
                            android:id="@+id/button12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight=".1"
                            android:fontFamily="@font/chalkboard_se_bold_"
                            android:text="$4.99"
                            android:textColor="#000000"
                            app:backgroundTint="#00FFCE"
                            app:cornerRadius="20dp"
                            app:strokeColor="#000000"
                            app:strokeWidth="2dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/restore_purchases_border"
                        android:gravity="center_horizontal">

                        <Button
                            android:id="@+id/restorePurchasesButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/chalkboard_se_bold_"
                            android:gravity="center_horizontal"
                            android:text="Restore Purchases"
                            android:textAllCaps="false"
                            android:textColor="#000000"
                            app:backgroundTint="#00FFCE"
                            app:cornerRadius="20dp"
                            app:strokeColor="#000000"
                            app:strokeWidth="2dp" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/newGameConfirmationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BF464646"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:minHeight="200dp">

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@drawable/confirmation_view_border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/chalkboard_se_light_"
                    android:gravity="center"
                    android:text="You currently have a game in progress. \n\nAre you sure you want to start a new game?"
                    android:textColor="#FFFFFF"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/noNewGameButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_rounded_mt_bold"
                        android:minWidth="75dp"
                        android:text="No"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        app:backgroundTint="#00FFCE"
                        app:cornerRadius="20dp"
                        app:strokeColor="#000000"
                        app:strokeWidth="2dp" />

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent" />

                    <Button
                        android:id="@+id/yesNewGameButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_rounded_mt_bold"
                        android:minWidth="75dp"
                        android:text="Yes"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        app:backgroundTint="#00FFCE"
                        app:cornerRadius="20dp"
                        app:strokeColor="#000000"
                        app:strokeWidth="2dp" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>